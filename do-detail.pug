extends templates/layout.pug

block vars
  - var activepage = "dashboard";
  - var headerText = "SHIPPER";

block content

  .loading-page
    .loading-page__wrap
      .loading-page__logo
        .icon
          img(src="images/logo-icon.png")
        .text
          img(src="images/logo-text.png")
    span.foot-text PT ANTAR GLOBAL PROSPERO
  .block-dashboard
    section.inner-header
      .container
        .row
          .col-lg-7.animate.animate--up
            a.arrow.mobile(href="dashboard.html")
            h1 Rincian Delivery Order
          .col-lg-5.animate.animate--up
            .search
              form
                .form-group
                  input.form-control(type="text" placeholder="Ketik Nomor Purchase Order / Delivery Order ...")
        .breadcrubms.animate.animate--up
          u NAVIGATION :
          a(href="#") Homepage
          a(href="#") Dashboard
          a(href="#") PO Aktif
          a(href="#") Ringkasan
          a(href="#") DO Aktif
          span DETAIL Delivery ORDER

    section.your-do
      .container
        .your-do__do-det.animate.animate--up
          a.boxlink(href="#")
          .row
            .col-lg-6
              .box-po
                span.small-title Nomor Purchase Order
                h3 AGR001/02/2020#096
                .progress-bar
                  .pb
                    .pb-block
                      span(style="width: 20%")
                    .prcntg 20%
                  small Prosentase pengiriman muatan Anda.
                .row
                  .col-lg-6
                    .box-text
                      p Batubara
                      small Nama Barang
                  .col-lg-6
                    .box-text
                      p 20.000 TON
                      small Tonase / Kubikasi
            .col-lg-3
              .box-card.light-green
                a.boxlink(href="do-active.html")
                .icon.hide-mobile
                  .ic(style="background-image: url(images/ic-rect-do-active.png)")
                h4 <b>DO</b> Aktif
                .text
                  p Delivery order yang sedang dalam pengiriman.
                .total
                  span 400
                .link-seemore
                  a(href="do-active.html") Lihat lebih lanjut
            .col-lg-3
              .box-card.cream
                a.boxlink(href="do-rest.html")
                .icon.hide-mobile
                  .ic(style="background-image: url(images/ic-rect-do-sisa.png)")
                h4 <b>DO</b> Sisa
                .text
                  p Delivery order yang sedang kami proses.
                .total
                  span 200
                .link-seemore
                  a(href="do-rest.html") Lihat lebih lanjut
          a.ext-link(href="#" target="_blank")

